@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;
  <h2>List of Orders</h2>
  @if (Model.Count == 0)
  {
    <p>There are no orders in the list.</p>
  }
  <ul>
    <p>Orders:</p>
    @foreach (Order order in Model)
    {
      <li><a href='/orders/@order.Id'>@order.Title</a></li>
    }
  </ul>
  <a href="/order/new">Add a new Order.</a>

  <form action="/order/delete" method="post">
    <button type="submit" name="button">Clear All Orders</button>
  </form>